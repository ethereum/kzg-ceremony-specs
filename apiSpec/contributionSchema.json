{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "contributions": {
            "type": "array",
            "prefixItems": [
                {"$ref": "#/$defs/2^12SubContribution"},
                {"$ref": "#/$defs/2^13SubContribution"},
                {"$ref": "#/$defs/2^14SubContribution"},
                {"$ref": "#/$defs/2^15SubContribution"}
            ],
            "items": false
        },
        "ecdsaSignature": {
            "type": "string",
            "pattern": "^0x[a-f\\d]{130}$|^$"
        }
    },
    "$defs": {
        "emptyString": {
            "type": "string",
            "pattern": "^$"
        },
        "G1Point": {
            "type": "string",
            "pattern": "^0x[a-f0-9]{96}$"
        },
        "G2Point": {
            "type": "string",
            "pattern": "^0x[a-f0-9]{192}$"
        },
        "2^12SubContribution": {
            "type": "object",
            "properties": {
                "numG1Powers": {
                    "type": "integer",
                    "minimum": 4096,
                    "maximum": 4096
                },
                "numG2Powers": {
                    "type": "integer",
                    "minimum": 65,
                    "maximum": 65
                },
                "powersOfTau": {
                    "type": "object",
                    "properties": {
                        "G1Powers": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/G1Point"
                            },
                            "minItems": 4096,
                            "maxItems": 4096
                        },
                        "G2Powers": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/G2Point"
                            },
                            "minItems": 65,
                            "maxItems": 65
                        }
                    },
                    "required": [
                        "G1Powers",
                        "G2Powers"
                    ]
                },
                "potPubkey": {
                    "type": "string"
                },
                "blsSignature": {
                    "anyOf": [
                        {"$ref": "#/$defs/G1Point"},
                        {"$ref": "#/$defs/emptyString"}
                    ]
                }
            },
            "required": [
                "numG1Powers",
                "numG2Powers",
                "powersOfTau"
            ]
        },
