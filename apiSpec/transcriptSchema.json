                        },
                        "blsSignatures": {
                            "type": "array",
                            "items": {
                                "oneOf": [
                                    {"$ref": "#/$defs/G1Point"},
                                    {"$ref": "#/$defs/emptyString"}
                                ]
                            }
                        }
                    },
                    "required": [
                        "runningProducts",
                        "potPubkeys",
                        "blsSignatures"
                    ]
                }
            },
            "required": [
                "numG1Powers",
